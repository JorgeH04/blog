       <!-- COMMENTS -->
<div class="container" id="caca">
<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Comments</h3>
  
  </div>
  <div class="card-body">
    <blockquote id="post-comment">
      <form action="/post/<%= post._id%>/comment" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Nombre">
        </div>
        
        <div class="form-group">
          <textarea name="comment" class="form-control" rows="2" placeholder="Comentario"></textarea>
        </div>
        
        <div class="form-group">
          <button class="btn btn-success" id="btn-comment">
            <i class="fa fa-comment"></i> Post
          </button>
        </div>
      </form>      
    </blockquote>
    <ul class="list-group p-4 mt-5">
        <% comments.forEach(function (comment) { %>

            <div class="card mt-5">
             <div class="card-body ">                    
                 <h5 class="text-center"><%= comment.name %></h5>
                 <p><%= comment.comment %>  </p>
                 
                 <p class="ml-auto mt-5"><%= format(comment.timestamp) %></p>            
            </div>
            <% }) %>
        </ul>
     </div>
   </div>
</div>



 

  









